network:
  version: 2
  ethernets:
    enX0:
      addresses:
        - {{ ansible_host }}/24
      nameservers:
        addresses:
{% for ns in name_servers %}
          - {{ ns }}
{% endfor %}
        search:
{% for dom in search_domains %}
          - {{ dom }}
{% endfor %}
      routes:
        - to: default
          via: {{ name_servers[0] }}
